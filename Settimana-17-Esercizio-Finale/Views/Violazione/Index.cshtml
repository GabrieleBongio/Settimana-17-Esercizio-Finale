@model List<Settimana_17_Esercizio_Finale.Models.Violazione>
@{
    ViewBag.Title = "Index";
}

<h2>Lista Violazioni:</h2>

<div>
    @foreach (Settimana_17_Esercizio_Finale.Models.Violazione v in Model)
    {
        <div class="border-top border-2 px-3">
            <p class="mt-3 m-0">Descrizione: @v.Descrizione</p>
            <p class="mb-3">Contestabile: @if (v.Contestabile) { Write("Si"); } else { Write("No");  }</p>
        </div>
    }
</div>
